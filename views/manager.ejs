
 <%-include("./header") %>

 <link rel="stylesheet" href="css/stylemanager.css">
 <div class="contain"></div>
  <% if (customer.length>0) { %>
    <div class="bg-text">
  <div class="row">
    <h1 class="text-center">List of Customers</h1>
  </div>
      <table id="customers">
        <thead>
          <tr>
            <th>Sr. No.</th>
            <th>Name</th>
            <th>Email ID</th>
            <th>password</th>
            <th>Balance</th>
            <th>RemoveAcc</th>
          </tr>
        </thead>
        <tbody>
          <% customer.forEach((customer,index) => { %>
          <tr>
            <td><%=index +1%></td>
            <td><%=customer.name%></td>
            <td><%=customer.email%></td>
            <td><%=customer.password%></td>
            <td><%=customer.money%></td>
            <td>
                <form action="/delete" method="post">
                        <input type="checkbox" name="checkbox" value="<%= customer._id %>" onChange="this.form.submit()"> 
                </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
    </table>
    <div class="logininfo">
      <h3>click here to add customer...</h3>
      <a href="/register">add customer!</a>
      <a href="/">Back..</a>
      </div>

  <% }else{ %>
  <div class="row">
    <h1 class="text-center">There are no customers at the moment!</h1>
  </div>
  <%}%>
 </div>

<%-include("./footer") %>